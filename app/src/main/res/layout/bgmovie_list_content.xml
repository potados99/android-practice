<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/list_item_height"
              android:orientation="horizontal">

    <TextView
            android:id="@+id/id_text"
            android:layout_width="@dimen/item_list_content_index_width"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/item_list_content_font_size" android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"/>

    <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/item_list_content_font_size" android:layout_gravity="center_vertical"/>

</LinearLayout>